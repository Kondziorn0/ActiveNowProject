<div class="flex flex-col items-center justify-center min-h-screen">
  <div class="bg-white shadow-lg rounded-lg p-8 md:w-1/2 w-full transition-transform transform hover:scale-105">
    <p class="notice text-green-600 font-semibold"><%= notice %></p>
    <p class="alert text-red-600 font-semibold"><%= alert %></p>

    <h1 class="text-4xl font-extrabold text-center my-6 text-blue-800">Welcome to our App!</h1>

    <% if user_signed_in? %>
      <p class="text-lg text-gray-800">Hello, <%= current_user.email %>!</p>
      <div class="mt-4 flex space-x-2">
        <%= link_to "Edit Account", edit_user_registration_path, class: "inline-block bg-blue-600 text-white rounded-lg px-6 py-3 hover:bg-blue-700 transition transform hover:scale-105" %>
        <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "inline-block bg-red-600 text-white rounded-lg px-6 py-3 hover:bg-red-700 transition transform hover:scale-105" %>
      </div>
    <% else %>
      <p class="text-lg text-gray-600">Please sign in to access more features.</p>
      <div class="mt-4 flex space-x-2">
        <%= link_to 'Log in', new_user_session_path, class: "inline-block bg-blue-600 text-white rounded-lg px-6 py-3 hover:bg-blue-700 transition transform hover:scale-105" %>
        <%= link_to 'Sign up', new_user_registration_path, class: "inline-block bg-green-600 text-white rounded-lg px-6 py-3 hover:bg-green-700 transition transform hover:scale-105" %>
      </div>
    <% end %>
  </div>
</div>