<div class="flex items-center justify-center min-h-screen">
  <div class="bg-white shadow-lg rounded-lg p-6 md:w-2/3 w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-xl inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="mb-4">
      <h2 class="text-2xl font-bold text-gray-800 mb-2"><%= @school.name %></h2>
      <p class="text-gray-600"><%= @school.localization %></p>
      <p class="text-sm text-gray-500"><%= @school.description %></p>
    </div>

    <div class="flex justify-between mt-4">
      <%= link_to "Back to schools", schools_path, class: "rounded-lg py-2 px-4 bg-gray-300 text-gray-800 font-medium hover:bg-gray-400 transition" %>

      <% if current_user.teacher? || current_user.admin? %>
        <div class="flex space-x-2">
          <%= link_to "Edit this school", edit_school_path(@school), class: "rounded-lg py-2 px-4 bg-blue-600 text-white font-medium hover:bg-blue-700 transition" %>
          <%= button_to "Destroy this school", @school, method: :delete, class: "rounded-lg py-2 px-4 bg-red-600 text-white font-medium hover:bg-red-700 transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>