<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Classrooms" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Classrooms</h1>
    <% if current_user.admin?%>
      <%= link_to "New classroom", new_classroom_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="classrooms" class="min-w-full">
    <% @classrooms.each do |classroom| %>
      <div class="lesson-item bg-white shadow-md rounded-lg p-4 mb-4 transition-transform transform hover:scale-105">
        <h2 class="text-lg font-semibold text-blue-800"><%= classroom.name %></h2>
        <p class="text-gray-600"><%= classroom.school&.name %></p>
        <p class="text-gray-600"><%= classroom.description%></p>
        <p>
          <%= link_to "Show this classroom", classroom, class: "mt-2 rounded-lg py-2 px-4 bg-blue-600 text-white inline-block font-medium" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
